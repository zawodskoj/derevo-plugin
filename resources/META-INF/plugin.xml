<idea-plugin>
    <id>pw.muffet.things.derevo</id>
    <name>Derevo Implicits Injector</name>
    <version>1.0.0</version>
    <vendor>zawodskoj</vendor>

    <description>This plugin adds support for typeclass instances generated by Derevo library, so your code will be less red.</description>

    <idea-version since-build="203.0"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.properties</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.intellij.scala</depends>

    <extensions defaultExtensionNs="org.intellij.scala">
        <syntheticMemberInjector implementation="pw.muffet.things.derevo.DerevoInjector"/>
    </extensions>

</idea-plugin>
